@using RealEstateDapperUI.Dtos.ProductDtos
@model List<ResultGetByEmployeeIdProductsDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/EstateAgent/Views/LayoutEstateAgent/Index.cshtml";
}

<div class="bg-light rounded h-100 p-4">
    <h1>Yayınladığınız İlan Listesi</h1>
    <div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">İlan Adı</th>
                <th scope="col">Fiyat</th>
                <th scope="col">Kategori</th>
                <th scope="col">Yayınlanma Tarihi</th>
                <th scope="col">Sil</th>
                <th scope="col">Düzenle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <th scope="row">@item.ProductId</th>
                        <td>@item.Title</td>
                        <td>@item.Price</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Date.ToLongDateString()</td>
                        <td><a href="/Category/DeleteCategory/@item.ProductId" class="btn btn-danger">Sil</a></td>
                        <td><a href="/Category/DeleteCategory/@item.ProductId" class="btn btn-warning">Düzenle</a></td>
                    </tr>
            }

        </tbody>
    </table>
    </div>
</div>
<br />
<a href="/EstateAgent/MyAdverts/CreateAdvert" class="btn btn-primary">Yeni İlan Ekle</a>