@using RealEstateDapperUI.Dtos.BottomGridDtos
@model List<ResultBottomGridDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="bg-light rounded h-100 p-4">
    <h1>Alt Grid Sayfası</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Icon</th>
                <th scope="col">Title</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@item.BottomGridId</td>
                    <td>@item.Icon</td>
                    <td>@item.Title</td>
                    <td><a href="/BottomGrid/DeleteBottomGridElement/@item.BottomGridId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/BottomGrid/UpdateBottomGrid/@item.BottomGridId" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a href="/BottomGrid/CreateBottomGridElement/" class="btn btn-primary">Yeni Açıklama Ekle</a>