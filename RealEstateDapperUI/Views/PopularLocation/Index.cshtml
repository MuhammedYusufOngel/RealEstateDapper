@using RealEstateDapperUI.Dtos.PopularLocationDtos
@model List<ResultPopularLocationDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<style>
    img{
        border-radius: 50%;
    }
</style>

<div class="bg-light rounded h-100 p-4">
    <h1>Ünlü Yerler Sayfası</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Resim</th>
                <th scope="col">İsim</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td scope="row">@item.LocationId</td>
                        <td><img src="@item.ImageUrl" height="50" width="50" /></td>
                        <td>@item.Name</td>
                        <td><a href="/PopularLocation/DeletePopularLocation/@item.LocationId" class="btn btn-danger">Sil</a></td>
                        <td><a href="/PopularLocation/UpdatePopularLocation/@item.LocationId" class="btn btn-success">Güncelle</a></td>
                    </tr>
            }
        </tbody>
    </table>
</div>

<a href="/PopularLocation/CreatePopularLocation/" class="btn btn-primary">Yeni Yer Ekle</a>

