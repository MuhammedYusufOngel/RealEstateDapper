@using RealEstateDapperUI.Dtos.CategoryDtos
@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}
<section class="w3l-cover-3">
    <div class="cover top-bottom">
	    <div class="container">
		    <div class="middle-section text-center">
			    <div class="section-width">
				    <p>Evde olmak ne kadar güzel, değil mi?</p>
				    <h2>Aradığınız evi hemen bulun</h2>
                    <br />
                    <br />
				    <form asp-action="PartialSearch" asp-controller="Default" class="w3l-cover-3-gd" method="post">
					    <input type="search" name="searchKeyValue" placeholder="Anahtar kelime...">
					    <span class="input-group-btn">
						    <select class="btn btn-default" name="categoryId" required>
							    @foreach(var item in ViewBag.v)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
						    </select>
					    </span>
					    <span class="input-group-btn">
                            <select class="btn btn-default" name="City" required>
                                @foreach (var item in ViewBag.c)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
						    </select>
					    </span>
					    <button type="submit" class="btn-primary">Ara</button>
				    </form>
			    </div>
			    <section id="bottom" class="demo">
				    <a href="#bottom"><span></span>Kaydır</a>
			    </section>
		    </div>
	    </div>
    </div>
</section>

    <section class="locations-1" id="locations">
            @await Component.InvokeAsync("_DefaultHomePageProductList")
    </section>

    <section class="w3l-index3" id="about">

        <div class="midd-w3 pb-5">
        <div class="container pb-lg-5 pb-md-4 pb-2">
            <div class="row">
                <div class="col-lg-5 pr-lg-0">
                    <div class="w3l-left-img">
                    </div>
                </div>
                <div class="col-lg-7 pl-lg-0">
                    <div class="w3l-right-info">
                        @await Component.InvokeAsync("_DefaultAboutComponentPartial")

                        @await Component.InvokeAsync("_DefaultAboutServiceComponentPartial")
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>

    <section class="w3l-bottom-grids py-5" id="steps">
        @await Component.InvokeAsync("_DefaultBottomGridComponentPartial")
    </section>

    <section class="locations-1 popular" id="locations">
        @await Component.InvokeAsync("_DefaultProductListExploreCitiesComponentPartial")
    </section>

    <section class="w3l-index3" id="about">
        @await Component.InvokeAsync("_DefaultOurClientsComponentPartial")
    </section>

    <div class="w3l-news" id="news">
        @await Component.InvokeAsync("_DefaultDiscountofDayComponentPartial")
    </div>

    <section class="w3l-companies-hny-6 py-5">
        @await Component.InvokeAsync("_DefaultBrandComponentPartial")
    </section>
