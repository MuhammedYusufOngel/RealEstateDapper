@using RealEstateDapperUI.Dtos.ProductImageDtos
@model List<ResultGetProductImageByIdDto>

@{
    ViewData["Title"] = @ViewBag.title1;
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

    <section class="w3l-blog post-content py-5">
        <div class="container py-lg-4 py-md-3 py-2">
            <div class="inner mb-4">
                <ul class="blog-single-author-date align-items-center">
                    <li>
                        <div class="listing-category"><span>@ViewBag.Type</span></div>
                    </li>
                    <li><span class="fa fa-clock-o"></span>@ViewBag.date</li>
                </ul>
            </div>
            <div class="post-content">
                <h2 class="title-single">@ViewBag.title1</h2>
            </div>
            <div class="blo-singl mb-4">
                <ul class="blog-single-author-date align-items-center">
                    <li>
                        <p>@ViewBag.District, @ViewBag.City, @ViewBag.Address</p>
                    </li>
                    <li><span class="fa fa-bed"></span> @ViewBag.BedroomCount Yatak Odası</li>
                    <li><span class="fa fa-bath"></span> @ViewBag.BathCount Banyo</li>
                    <li><span class="fa fa-share-square-o"></span> @ViewBag.Size metrekare</li>
                </ul>
                <ul class="share-post">
                    <a href="#url" class="cost-estate m-o">@ViewBag.Price TL</a>
                </ul>
            </div>
            <div class="row">
                <div class="col-lg-8 w3l-news">
                    <div class="blog-single-post">
                        <div class="single-post-image mb-5">
                            <div class="owl-blog owl-carousel owl-theme">
                                @foreach(var item in Model)
                                {
                                    <div class="item">
                                        <div class="card">
                                            <img src="@item.ImageUrl" height="400" alt="image">
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="single-post-content">
                            <h3 class="post-content-title mb-3">Açıklama</h3>
                            <p class="mb-4">
                                @ViewBag.Description </p>
                            <div class="single-bg-white">
                                <h3 class="post-content-title mb-4">Detaylar</h3>
                                <ul class="details-list">
                                    <li><strong>İlan id :</strong> @ViewBag.ProductDetailId </li>
                                    <li><strong>Mülkün genişliği:</strong> @ViewBag.Size</li>
                                    <li><strong>Oda Sayısı :</strong> @ViewBag.RoomCount </li>
                                    <li><strong>Yatak Odası Sayısı :</strong> @ViewBag.BedroomCount </li>
                                    <li><strong>Banyo :</strong> @ViewBag.BathCount </li>
                                    <li><strong>Garaj Sayısı :</strong> @ViewBag.GarageSize </li>
                                    <li><strong>İlanın Fiyatı :</strong> @ViewBag.Price TL </li>
                                    <li><strong>İnşa Edilme Yılı :</strong> @ViewBag.BuildYear </li>
                                    <li><strong>İlanın Yayınlanma Tarihi :</strong> @ViewBag.Date </li>
                                </ul>
                            </div>

                            @await Component.InvokeAsync("_PropertyAmenitiesComponentPartial", ViewBag.ProductDetailId)
                            
                        </div>

                        <div class="single-bg-white">
                            <h3 class="post-content-title mb-4">Yer</h3>
                            <div class="agent-map">
                                    <iframe
                                src="@ViewBag.Location"
                                frameborder="0" style="border:0" allowfullscreen=""></iframe>
                            </div>
                        </div>

                        <div class="single-bg-white mb-0">
                            <h3 class="post-content-title mb-4">Video</h3>
                            <div class="post-content">
                                <iframe src="@ViewBag.VideoUrl" frameborder="0"
                                allowfullscreen=""></iframe>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar-side col-lg-4 col-md-12 col-sm-12 mt-lg-0 mt-5">
                    <aside class="sidebar">
                        <div class="sidebar-widget popular-posts">
                            <div class="sidebar-title">
                                <h4>İletişim Kurun</h4>
                            </div>

                            <article class="post">
                                <figure class="post-thumb"><img src="@ViewBag.ProfileUrl" class="radius-image" alt="">
                                </figure>
                                <div class="text mb-0"><a href="#blog-single">@ViewBag.Name
                                    </a>
                                    <div class="post-info">@ViewBag.PhoneNumber</div>
                                    <div class="post-info">@ViewBag.Mail</div>
                                </div>
                            </article>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </section>


