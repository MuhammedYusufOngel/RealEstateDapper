@using RealEstateDapperUI.Dtos.AboutDetailDtos
@model List<ResultAboutDetailDto>

@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="bg-light rounded h-100 p-4">
    <h1>Biz Kimiz Sayfası</h1>
    <div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Başlık</th>
                <th scope="col">Alt Başlık</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@item.AboutId</td>
                    <td>@item.Title</td>
                    <td>@item.Subtitle</td>
                    <td><a href="/AboutDetail/DeleteAboutDetail/@item.AboutId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/AboutDetail/UpdateAboutDetail/@item.AboutId" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>

<a href="/AboutDetail/CreateAboutDetail/" class="btn btn-primary">Yeni Biz Kimiz Açıklaması Ekle</a>
