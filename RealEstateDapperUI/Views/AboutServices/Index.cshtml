@using RealEstateDapperUI.Dtos.AboutDetailDtos
@model List<ResultServicesDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="bg-light rounded h-100 p-4">
    <h1>Servisler Sayfası</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ad</th>
                <th scope="col">Durumu</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td scope="row">@item.ServiceId</td>
                        <td>@item.Name</td>
                        <td>@item.Status</td>
                        <td><a href="/AboutServices/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a></td>
                        <td><a href="/AboutServices/UpdateService/@item.ServiceId" class="btn btn-success">Güncelle</a></td>
                    </tr>
            }
        </tbody>
    </table>
</div>

<a href="/AboutServices/CreateService/" class="btn btn-primary">Yeni Servis Ekle</a>
