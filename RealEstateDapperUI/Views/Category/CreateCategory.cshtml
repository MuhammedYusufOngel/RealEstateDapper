@model RealEstateDapperUI.Dtos.CategoryDtos.CreateCategoryDto

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h1>Yeni Kategori Ekleme</h1>

<form method="post">
    <div class="mb-3">
        <label for="CategoryName" class="form-label">Kategori Adı</label>
        <input type="text" class="form-control" asp-for="CategoryName"
            aria-describedby="CategoryName">
    </div>
    <button class="btn btn-primary">Kategoriyi Kaydet</button>
</form>
