@using RealEstateDapperUI.Dtos.EmployeeDtos
@model List<ResultEmployeeDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="bg-light rounded h-100 p-4">
    <h1>Ürünler Sayfası</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Çalışanın Adı</th>
                <th scope="col">İşi</th>
                <th scope="col">Mail</th>
                <th scope="col">Telefon</th>
                <th scope="col">Durumu</th>
                <th scope="col">Sil</th>
                <th scope="col">Düzenle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <th scope="row">@item.EmployeeId</th>
                        <td>@item.Name</td>
                        <td>@item.Title</td>
                        <td>@item.Mail</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Status</td>
                        <td><a href="/Employee/DeleteEmployee/@item.EmployeeId" class="btn btn-danger">Sil</a></td>
                        <td><a href="/Employee/UpdateEmployee/@item.EmployeeId" class="btn btn-warning">Düzenle</a></td>
                    </tr>
            }

        </tbody>
    </table>
</div>
<br />
<a href="/Employee/CreateEmployee" class="btn btn-primary">Yeni Çalışan Ekle</a>

